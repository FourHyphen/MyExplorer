<Window x:Class="MyExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyExplorer"
        mc:Ignorable="d"
        PreviewKeyDown="MainWindowKeyDown"
        PreviewMouseLeftButtonDown="MainWindowMouseLeftButtonDown"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Menu x:Name="Menu"
                  DockPanel.Dock="Top">
                <MenuItem Header="ファイル(_F)">
                    <MenuItem Header="フォルダを開く(_O)" Click="MenuOpenFolderClick"/>
                </MenuItem>
            </Menu>

            <Canvas x:Name="FoldersArea"/>
        </DockPanel>
    </Grid>
</Window>
