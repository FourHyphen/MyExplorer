<Window x:Class="MyExplorer.FileRenameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyExplorer"
        mc:Ignorable="d"
        Title="Rename" Height="120" Width="300">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="現在"/>
                <Label Content="{Binding NowName}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="変更後"/>
                <TextBox x:Name="AfterNameTextBox"
                         Text="{Binding AfterName}"
                         Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="10">
                <Button x:Name="OKButton"
                        Content="OK"
                        Click="OKButtonClicked"/>
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Click="CancelButtonClicked"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
